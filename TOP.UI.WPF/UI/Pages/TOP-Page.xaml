<UserControl x:Class="TOP.UI.WPF.UI.Pages.TOP_Page"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TOP.UI.WPF.UI.Pages"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid>
        <Border Margin="15" MinWidth="400" Background="White" VerticalAlignment="Center" Padding="30" CornerRadius="10" MaxWidth="900">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Color="LightGray" ShadowDepth="0"/>
            </Border.Effect>
            <Grid>
                <StackPanel VerticalAlignment="Top" Orientation="Horizontal">
                    <Button x:Name="btnSearch" Content="Search" Margin="5" Click="btnSearch_Click"/>
                    <Button x:Name="btnNewTOP" Margin="5" Click="btnNewTOP_Click" Tag="new">
                        <materialDesign:PackIcon Kind="Plus" Foreground="White"/>
                    </Button>
                </StackPanel>
                <DataGrid IsReadOnly="True" x:Name="TOPsDataGrid" Width="820" Height="450" Margin="0 50 0 0" AutoGeneratedColumns="TOPsDataGrid_AutoGeneratedColumns" HorizontalScrollBarVisibility="Auto">
                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem x:Name="SeeDetailsItem" Header="See details" Click="SeeDetailsItem_Click"/>
                            <MenuItem x:Name="ReserveItem" Header="Reserve" Click="ReserveItem_Click"/>
                            <MenuItem x:Name="AcceptItem" Header="Accept" Click="AcceptItem_Click"/>
                            <MenuItem x:Name="EditItem" Header="Edit" Click="EditItem_Click"/>
                            <MenuItem x:Name="DeleteItem" Header="Delete" Click="DeleteItem_Click"/>
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                </DataGrid>
                <StackPanel x:Name="TOP_Panel" HorizontalAlignment="Right" Width="0" Background="Gray" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True">
                    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Orientation="Horizontal">
                        <Button x:Name="btnClosePanel" Width="30" Height="30" Background="{x:Null}" BorderBrush="{x:Null}" Padding="0" Foreground="White" Click="btnClosePanel_Click">
                            <materialDesign:PackIcon Kind="Close"/>
                        </Button>
                        <Button x:Name="btnOk" Width="30" Height="30" Background="{x:Null}" BorderBrush="{x:Null}" Padding="0" Foreground="White" Click="btnOk_Click">
                            <materialDesign:PackIcon Kind="ContentSave"/>
                        </Button>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <StackPanel HorizontalAlignment="Left" Orientation="Vertical">
                            <TextBlock Text="Company*" Margin="5 9 0 0"/>
                            <TextBlock Text="Address*" Margin="5 19 0 0"/>
                            <TextBlock Text="Teacher*" Margin="5 22 0 0"/>
                            <TextBlock Text="VQUnit*" Margin="5 22 0 0"/>
                            <TextBlock Text="Phone" Margin="5 20 0 0"/>
                            <TextBlock Text="Email" Margin="5 16 0 0"/>
                            <TextBlock Text="Info" Margin="5 18 0 0"/>
                        </StackPanel>
                        <StackPanel HorizontalAlignment="Right" Orientation="Vertical" Margin="20 0 0 0">
                            <TextBox x:Name="txtCompanyAdd" Text="" materialDesign:HintAssist.Hint="Company" Width="200" Margin="5"/>
                            <TextBox x:Name="txtAddressAdd" Text="" materialDesign:HintAssist.Hint="Address" Width="200" Margin="5"/>
                            <ComboBox x:Name="cboTeacherAdd" Text="" materialDesign:HintAssist.Hint="Teacher" Width="200" Margin="5"/>
                            <ComboBox x:Name="cboVocationQualificationUnitAdd" materialDesign:HintAssist.Hint="VocationQualificationUni" Width="200" Margin="5"/>
                            <TextBox x:Name="txtPhoneAdd" Text="" materialDesign:HintAssist.Hint="Phone" Width="200" Margin="5"/>
                            <TextBox x:Name="txtEmailAdd" Text="" materialDesign:HintAssist.Hint="Email" Width="200" Margin="5"/>
                            <RichTextBox x:Name="txtInfoAdd" materialDesign:HintAssist.Hint="Info" Width="200" Margin="5"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
    
</UserControl>
